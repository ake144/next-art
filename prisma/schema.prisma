generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  posts    Blog[]
  latest   Latest[]
  articles posts[]
}

model Blog {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}

model posts {
  id        Int    @id @default(autoincrement())
  title     String
  link      String
  thumbnail String
  authorId  Int
  content   String
  author    User   @relation(fields: [authorId], references: [id])
}

model Latest {
  id          Int    @id @default(autoincrement())
  title       String @unique
  description String
  authorId    Int
  image       String
  link        String
  author      User   @relation(fields: [authorId], references: [id])
}
